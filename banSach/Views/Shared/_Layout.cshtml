<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name='copyright' content=''>
    <!-- CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700&display=swap" rel="stylesheet">
    <link rel="icon" type="image/png" href="~/img/logo/logoo.jpg">
    <link rel="stylesheet" href="~/Content/bootstrap.css">
    <link rel="stylesheet" href="~/Content/magnific-popup.min.css">
    <link rel="stylesheet" href="~/Content/jquery.fancybox.min.css">
    <link rel="stylesheet" href="~/Content/niceselect.css">
    <link rel="stylesheet" href="~/Content/animate.css">
    <link rel="stylesheet" href="~/Content/flex-slider.min.css">
    <link rel="stylesheet" href="~/Content/owl-carousel.css">
    <link rel="stylesheet" href="~/Content/slicknav.min.css">
    <link rel="stylesheet" href="~/Content/reset.css">
    <link rel="stylesheet" href="~/Content/css.css">
    <link rel="stylesheet" href="~/Content/thongbao1.css" />
    <link rel="stylesheet" href="~/Content/responsive.css">
    <link rel="stylesheet" href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/themify-icons/1.0.0/css/themify-icons.min.css"
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <style>
        body, html {
            font-family: 'Merriweather', Georgia, serif !important;
        }
        /* Make the entire header sticky */
        .header.shop {
            position: static;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
            background-color: #fff;
            font-size: 14px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        /* Ensure body has padding to prevent content from being hidden under the header */
        .topbar {
            background: #07a54b !important; /* Màu xanh dương, thêm !important để chắc chắn ghi đè */
            color: #fff !important;
        }

        .middle-inner {
            background: #EAECC6 !important;
        }

        .topbar .list-main li {
            margin-right: 10px;
        }

        .middle-inner .container {
            height: 100%; /* đảm bảo container cao bằng header */
            display: flex;
            align-items: center;
        }

        .middle-inner .row {
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
        }

        .middle-inner .col-lg-2,
        .middle-inner .col-md-2,
        .middle-inner .col-12,
        .middle-inner .col-lg-8,
        .middle-inner .col-md-7,
        .middle-inner .col-md-3 {
            /* Reset mọi float/bootstrap mặc định nếu có */
            float: none;
            width: auto;
            min-width: 0;
            flex: 1; /* Mỗi cột chiếm đều nhau */
            display: flex;
            align-items: center;
            justify-content: center; /* Căn giữa nội dung từng cột */
            height: 100%;
            box-sizing: border-box;
        }

        .logo {
            display: flex;
            align-items: center;
            justify-content: center; /* CHỈNH: căn giữa ngang trong cột */
            width: 100%;
            height: 100%;
            /* max-width: 130px;  Có thể bỏ để logo rộng, tràn giữa cột */
        }

            .logo img {
                max-height: 80px;
                width: auto;
                display: block;
                margin: 0 auto;
                object-fit: contain;
            }

        .search-bar {
            display: flex;
            width: 100%;
            max-width: 520px; /* hoặc tuỳ ý */
            height: 48px;
        }

            .search-bar input[type="text"] {
                flex: 1;
                border: 2px solid #222;
                border-right: none;
                border-radius: 8px 0 0 8px;
                padding: 0 16px;
                font-size: 16px;
                height: 100%;
                outline: none;
                background: #fff;
                box-sizing: border-box;
            }

            .search-bar button,
            .search-bar .btnn {
                width: 56px;
                background: #07a54b !important;
                color: #fff;
                border: 2px solid #222;
                border-left: none;
                border-radius: 0 8px 8px 0;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 22px;
                height: 100%;
                cursor: pointer;
                transition: background 0.2s;
                padding: 0;
            }

                .search-bar button:hover,
                .search-bar .btnn:hover {
                    background: #ff9800;
                    color: #fff;
                }

        .right-bar {
            justify-content: center;
        }

            .right-bar .shopping .single-icon {
                font-size: 48px !important;
                position: relative;
                color: #222;
                display: flex;
                align-items: center;
                justify-content: center;
                height: 100%;
            }

        }

        .right-bar .shopping .total-count {
            position: absolute;
            top: 4px; /* căn chỉnh lên/xuống nếu cần */
            right: -18px; /* căn chỉnh trái/phải nếu cần */
            background: #ff9800;
            color: #fff;
            border-radius: 50%;
            width: 28px;
            height: 28px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 17px;
            font-weight: bold;
            border: 2.5px solid #fff;
            box-shadow: 0 2px 6px rgba(0,0,0,0.10);
            line-height: 1;
            padding: 0;
            z-index: 9;
        }

        media (max-width: 991px) {
            .middle-inner

        {
            height: auto;
            flex-direction: column;
            align-items: stretch;
        }

        .middle-inner .container,
        .middle-inner .row,
        .middle-inner .col-lg-2,
        .middle-inner .col-lg-8,
        .middle-inner .col-md-2,
        .middle-inner .col-md-7,
        .middle-inner .col-md-3 {
            height: auto;
            display: block;
        }

        }

        /* Ensure navbar and its children are not affected */
        .navbar-collapse, .nav-inner {
            width: 100%;
        }

        .footer {
            background: #333;
            color: #fff;
            font-size: 13px;
            padding: 24px 0 0;
        }

            .footer .container {
                display: flex;
                flex-wrap: wrap;
                justify-content: space-between;
                max-width: 1200px;
                margin: 0 auto;
            }

        .footer-col {
            flex: 1 1 220px;
            min-width: 170px;
            margin: 0 16px 16px;
            font-size: 13px;
        }

        .footer-logo img {
            height: 40px;
            margin-bottom: 10px;
        }

        .footer-title {
            font-weight: bold;
            font-size: 14px;
            margin-bottom: 10px;
            text-transform: uppercase;
        }

        .footer-contact li,
        .footer-links li,
        .footer-policies li {
            font-size: 13px;
            margin-bottom: 7px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .footer-contact i {
            font-size: 20px;
            color: #05a94e;
            width: 28px;
        }

        .footer-links,
        .footer-policies {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .footer-links a,
            .footer-policies a {
                color: #fff;
                text-decoration: none;
                transition: color 0.2s;
            }

                .footer-links a:hover,
                .footer-policies a:hover {
                    color: #05a94e;
                }

        .footer-news-desc {
            font-size: 12px;
            margin-bottom: 7px;
            color: #fff;
        }

        .footer-newsletter-form {
            display: flex;
            align-items: center;
            width: fit-content;
            gap: 0;
        }

            .footer-newsletter-form input[type="email"] {
                background: #fff;
                color: #222;
                border: none;
                outline: none;
                padding: 6px 10px;
                width: 140px;
                height: 32px;
                font-size: 13px;
                border-radius: 16px 0 0 16px;
                box-sizing: border-box;
            }

            .footer-newsletter-form button {
                background: #07a54b;
                color: #fff;
                border: none;
                font-weight: bold;
                font-size: 13px;
                padding: 0 18px;
                height: 32px;
                margin-left: -4px;
                border-radius: 0 16px 16px 0;
                cursor: pointer;
                display: flex;
                align-items: center;
                justify-content: center;
                transition: background 0.2s;
            }

                .footer-newsletter-form button:hover {
                    background: #059441;
                }

        .footer-social {
            margin-top: 18px;
        }

            .footer-social a {
                color: #fff;
                font-size: 18px;
                margin-right: 10px;
                transition: color 0.2s;
            }

                .footer-social a:hover {
                    color: #05a94e;
                }

        .footer .fb-page {
            margin-top: 10px;
        }

            .footer .fb-page img {
                width: 120px;
                border-radius: 4px;
            }

        .footer-bottom {
            background: #222;
            color: #bbb;
            text-align: center;
            font-size: 12px;
            padding: 7px 0;
            margin-top: 0;
        }

        .product-area {
            margin-top: 15px !important;
            padding-top: 15px !important;
        }
    </style>
</head>
<body>
    @Html.Partial("_CustomToast")
    <!-- Header -->
    <header class="header shop">
        <!-- Topbar -->
        <div class="topbar">
            <div class="container">
                <div class="row">
                    <div class="col-lg-5 col-md-12 col-12">
                        <div class="top-left">
                            <ul class="list-main">
                                <li><i class="bx bx-headphone"></i> +123 456 7891</li>
                                <li><i class="bx bx-envelope"></i> info@bookstore.com</li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-7 col-md-12 col-12">
                        <div class="right-content">
                            <ul class="list-main">
                                <li><i class="bx bx-map"></i> Sơn Trà, Đà Nẵng</li>
                                @if (Session["KhachHang"] == null || string.IsNullOrEmpty(Session["KhachHang"]?.ToString()))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("Index", "Dangnhap")">
                                            <i class="bx bx-log-in"></i> Đăng Nhập
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("Index", "Dangky")">
                                            <i class="bx bx-user-plus"></i> Đăng Ký
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <span class="nav-link">
                                            <a href="@Url.Action("Index", "Thongtin")" title="Xem/Chỉnh sửa thông tin">
                                                <i class="bx bx-user-circle"> @Session["HoTen"]</i>
                                            </a>
                                        </span>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("Logout", "DangNhap")" title="Đăng xuất">
                                            <i class="bx bx-log-out"></i> Thoát
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Topbar -->
        <div class="middle-inner">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2 col-md-2 col-12">
                        <div class="logo">
                            <a href="@Url.Action("Index", "Home")"><img src="~/img/logo/logoo.jpg" alt="logo"></a>
                        </div>
                        <div class="search-top"></div>
                        <div class="mobile-nav"></div>
                    </div>
                    <div class="col-lg-8 col-md-7 col-12">
                        <div class="search-bar-top">
                            <div class="search-bar">
                                @using (Html.BeginForm("TimKiem", "Home"))
                                {
                                    <input name="skey" placeholder="Nhập thông tin tìm kiếm....." type="text">
                                    <button class="btnn" type="submit"><i class="bx bx-search"></i></button>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-12">
                        <div class="right-bar">
                            <div class="sinlge-bar shopping" style="display: flex; align-items: center; justify-content: center;">
                                <a href="@Url.Action("Index", "Giohang")" class="single-icon">
                                    <i class="bx bx-cart"></i>
                                    @if (ViewBag.Tongsoluong != null)
                                    {
                                        <span class="total-count">@ViewBag.Tongsoluong</span>
                                    }
                                </a>
                                <div class="total-count-container">
                                    <span style="font-weight: bold; font-size: 16px; margin-left: 15px; color: #222;">Giỏ hàng</span> <br>
                                    <span class="total-count" style="font-size: 11px; color: #222;margin-left:13px; font-weight: 400;margin-l margin-top: 1px;">
                                        @ViewBag.Tongsoluong
                                    </span>
                                    <span style="font-size: 11px; color: #222; font-weight: 400;">
                                        sản phẩm
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Header Inner -->
        @Html.Action("Menu", "Module")
        <!--/ End Header Inner -->
    </header>

    <div class="product-area section">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div>
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Start Footer Area -->
    <footer class="footer">
        <div class="container">
            <!-- Col 1: Logo & Contact -->
            <div class="footer-col">
                <div class="footer-logo">
                    <img src="~/img/logo/logoo.jpg" alt="Hiệu sách Cú vọ Logo" />
                </div>
                <ul class="footer-contact">
                    <li><i class="fa fa-map-marker-alt"></i>Sơn Trà, Đà Nẵng </li>
                    <li><i class="fa fa-phone"></i> Hotline: 01 2345 5678</li>
                    <li><i class="fa fa-envelope"></i> Email: bookstore.online@gmail.com</li>
                </ul>
            </div>
            <!-- Col 2: Support -->
            <div class="footer-col">
                <div class="footer-title">HỖ TRỢ KHÁCH HÀNG</div>
                <ul class="footer-links">
                    <li><a href="#">Câu hỏi thường gặp</a></li>
                    <li><a href="#">Điều khoản dịch vụ</a></li>
                </ul>
                <div class="footer-title">ĐĂNG KÝ NHẬN TIN</div>
                <p class="footer-news-desc">
	                Hãy nhập email của bạn vào ô dưới đây để có thể nhận được tất cả tin tức mới nhất của IPM
                </p>
                <form class="footer-newsletter-form" autocomplete="off">
	                <input type="email" placeholder="Nhập email của bạn..." required />
	                <button type="submit">ĐĂNG KÝ</button>
                </form>
            </div>
            <!-- Col 3: Policies -->
            <div class="footer-col">
                <div class="footer-title">CHÍNH SÁCH</div>
                <ul class="footer-policies">
                    <li><a href="#">Chính sách bảo mật</a></li>
                    <li><a href="#">Chính sách thanh toán</a></li>
                    <li><a href="#">Chính sách vận chuyển</a></li>
                    <li><a href="#">Chính sách đổi trả</a></li>
                </ul>
            </div>
            <!-- Col 4: Social -->
            <div class="footer-col">
                <div class="footer-title">KẾT NỐI VỚI CHÚNG TÔI</div>
                <div class="fb-page">
                    <img src="~/img/logo/fb-page-demo.png" alt="Facebook Page" style="width:220px; border-radius:6px;" />
                </div>
                <div class="footer-title" style="margin-top:18px;">CÁC KÊNH KHÁC</div>
                <div class="footer-social">
                    <a href="#"><i class="fab fa-facebook-square"></i></a>
                    <a href="#"><i class="fab fa-twitter-square"></i></a>
                    <a href="#"><i class="fab fa-youtube-square"></i></a>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            © @DateTime.Now.Year BOOKSTORE. All rights reserved.
        </div>
    </footer>
    <!-- Jquery -->
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/jquery-migrate-3.0.0.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <!-- Popper JS -->
    <script src="~/Scripts/popper.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- Color JS -->
    <script src="~/Scripts/colors.js"></script>
    <!-- Slicknav JS -->
    <script src="~/Scripts/slicknav.min.js"></script>
    <!-- Owl Carousel JS -->
    <script src="~/Scripts/owl-carousel.js"></script>
    <!-- Magnific Popup JS -->
    <script src="~/Scripts/magnific-popup.js"></script>
    <!-- Waypoints JS -->
    <script src="~/Scripts/waypoints.min.js"></script>
    <!-- Countdown JS -->
    <script src="~/Scripts/finalcountdown.min.js"></script>
    <!-- Nice Select JS -->
    <script src="~/Scripts/nicesellect.js"></script>
    <!-- Flex Slider JS -->
    <script src="~/Scripts/flex-slider.js"></script>
    <!-- ScrollUp JS -->
    <script src="~/Scripts/scrollup.js"></script>
    <!-- Onepage Nav JS -->
    <script src="~/Scripts/onepage-nav.min.js"></script>
    <script src="~/Scripts/easing.js"></script>
    <script src="~/Scripts/active.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>