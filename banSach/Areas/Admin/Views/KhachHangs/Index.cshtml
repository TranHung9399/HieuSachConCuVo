@model IPagedList<banSach.Models.KhachHang>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Quản lý Khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<main>
    <div class="container-fluid px-4">
        <br />
        <h2>Danh sách khách hàng</h2>
        <div class="my-3 d-flex justify-content-between align-items-center">
            <form class="admin-search-form d-flex" method="get" action="@Url.Action("Index")">
                <input type="text" name="search" class="form-control me-2" placeholder="Tìm kiếm khách hàng..." value="@(ViewBag.CurrentFilter ?? "")" />
                <button type="submit" class="btn btn-outline-primary" title="Tìm kiếm">
                    <i class="fa fa-search"></i>
                </button>
            </form>
            @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
        </div>
        <div class="card mb-4">
            <div class="card-body">
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Tên</th>
                            <th>Email</th>
                            <th>Địa chỉ</th>
                            <th>SĐT</th>
                            <th style="width: 150px;">Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.HoTen</td>
                                <td>@item.Email</td>
                                <td>@item.DiaChi</td>
                                <td>@item.SoDienThoai</td>
                                <td>
                                    <div class="d-flex">
                                        <a href="@Url.Action("Edit", new { id = item.MaKH })" title="Sửa">
                                            <i class="fa-solid fa-lg fa-pen-to-square"></i>
                                        </a>
                                        <div class="ms-2"></div>
                                        <a href="@Url.Action("Details", new { id = item.MaKH })" title="Chi tiết">
                                            <i class="fa-solid fa-lg fa-circle-info"></i>
                                        </a>
                                        <div class="ms-2"></div>
                                        <a href="@Url.Action("Delete", new { id = item.MaKH })" title="Xóa">
                                            <i class="fa-regular fa-lg fa-trash-can"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="text-center">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, search = ViewBag.CurrentFilter }),
                        new PagedListRenderOptions
                        {
                            UlElementClasses = new[] { "pagination", "justify-content-center" },
                            LiElementClasses = new[] { "page-item" },
                            DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                            DisplayLinkToLastPage = PagedListDisplayMode.Always,
                            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                            DisplayLinkToNextPage = PagedListDisplayMode.Always
                        })
                </div>
            </div>
        </div>
    </div>
</main> 