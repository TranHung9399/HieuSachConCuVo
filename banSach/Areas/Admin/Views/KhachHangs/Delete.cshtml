@model banSach.Models.KhachHang
@{
    ViewBag.Title = "Xóa khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <br />
    <h3>Bạn có chắc chắn muốn xoá khách hàng này không?</h3>
    <br />
    <ul class="list-group">
        <li class="list-group-item">
            <span class="fw-bold">Tên khách hàng:</span> @Html.DisplayFor(model => model.HoTen)<br />
            <span class="fw-bold">Email:</span> @Html.DisplayFor(model => model.Email)<br />
            <span class="fw-bold">Số điện thoại:</span> @Html.DisplayFor(model => model.SoDienThoai)<br />
            <span class="fw-bold">Địa chỉ:</span> @Html.DisplayFor(model => model.DiaChi)
        </li>
    </ul>
    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="m-auto">
            <input class="btn btn-primary btn-lg" type="submit" value="Xóa" />
            @Html.ActionLink("Quay Về", "Index", null, new { @class = "btn btn-primary btn-lg" })
        </div>
    }
</div> 