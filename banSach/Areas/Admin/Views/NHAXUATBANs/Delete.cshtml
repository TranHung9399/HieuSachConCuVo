@model banSach.Models.NhaXuatBan

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <br />
    <h3>Bạn có chắc chắn muốn xóa nhà xuất bản này không?</h3>
    <br />
    <p><span class="fw-bold">Tên nhà xuất bản</span><br /> <span>@Html.DisplayFor(model => model.TenNXB)</span></p>
    <p><span class="fw-bold">Địa chỉ</span><br /> <span>@Html.DisplayFor(model => model.DiaChi)</span></p>

    @using (Html.BeginForm("Delete", "NhaXuatBans", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="m-auto">
            <input class="btn btn-primary btn-lg" type="submit" value="Xoá" />
            @Html.ActionLink("Quay Về", "Index", null, new { @class = "btn btn-primary btn-lg" })
        </div>
    }
</div>
