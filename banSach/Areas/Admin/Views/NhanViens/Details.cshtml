@model banSach.Models.NhanVien

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container my-5">
    <ul class="list-group">
        <li class="list-group-item">
            <h4 class="mb-1">Tên nhân viên: @Html.DisplayFor(model => model.HoTen)</h4>
            <br />


            <div class="row">
                <div class="col-md-6">
                    <span class="fw-bold">Tài khoản</span><br />
                    @Html.DisplayFor(model => model.TenTK)
                </div>
                <div class="col-md-6">
                    <span class="fw-bold">Mật khẩu</span><br />
                    @Html.DisplayFor(model => model.MatKhau)
                </div>
            </div>
            <br />
            <p class="mb-1">
                <span class="fw-bold">Số điện thoại</span><br />
                @Html.DisplayFor(model => model.SoDienThoai)
            </p>
            <br />

            <p class="mb-1">
                <span class="fw-bold">Email</span><br />
                @Html.DisplayFor(model => model.Email)
            </p>
            <br />
            <p class="mb-1">
                <span class="fw-bold">Tên chức vụ</span><br />
                @Html.DisplayFor(model => model.ChucVu.TenCV)
            </p>
            <br />


        </li>
    </ul>
    <div class="my-4" style="width: 100%">
        <div class="m-auto">
            @Html.ActionLink("Sửa Thông Tin", "Edit", null, new { id = Model.MaNhanVien }, new { @class = "btn btn-primary btn-lg" })
            @Html.ActionLink("Quay Về", "Index", null, new { @class = "btn btn-primary btn-lg" })
        </div>
    </div>
</div>