@model banSach.ViewModels.TacGiaModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-12 col-lg-9 col-xl-7">
                    <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                        <div class="card-body p-4 p-md-5">
                            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Thêm mới tác giả</h3>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="row">
                                <div class="col-md-12 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label fw-bold">Tên Tác Giả</label>
                                        @Html.EditorFor(model => model.TenTG, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                        @Html.ValidationMessageFor(model => model.TenTG, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-12 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label fw-bold">Địa Chỉ</label>
                                        @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                        @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-12 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label fw-bold">Tiểu Sử</label>
                                        @Html.TextAreaFor(model => model.TieuSu, new { @class = "form-control", rows = 5 })
                                        @Html.ValidationMessageFor(model => model.TieuSu, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-12 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label fw-bold">Điện Thoại</label>
                                        @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                        @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12 mb-4">
                                <h5 class="fw-bold">Chọn sách đã viết</h5>
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Chọn</th>
                                            <th>Tên Sách</th>
                                            <th>Vai Trò</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.Saches.Count; i++)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.CheckBoxFor(m => m.Saches[i].DuocChon)
                                                    @Html.HiddenFor(m => m.Saches[i].MaSach)
                                                    @Html.HiddenFor(m => m.Saches[i].TenSach)
                                                </td>
                                                <td>@Model.Saches[i].TenSach</td>
                                                <td>
                                                    @Html.TextBoxFor(m => m.Saches[i].VaiTro, new { @class = "form-control", placeholder = "Nhập vai trò..." })
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>


                            <div style="width: 100%">
                                <div class="m-auto">
                                    <input class="btn btn-primary btn-lg" type="submit" value="Thêm" />
                                    @Html.ActionLink("Quay Về", "Index", null, new { @class = "btn btn-primary btn-lg" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

}
