@model List<banSach.Models.DonDatHang>
@{
    ViewBag.Title = "Đơn Hàng Đã Mua";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .orders-container {
        max-width: 900px;
        margin: 50px auto;
        padding: 20px;
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .order-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .order-table th,
        .order-table td {
            padding: 12px 15px;
            border: 1px solid #ddd;
            text-align: center;
        }

        .order-table th {
            background-color: #f5f5f5;
            font-weight: bold;
        }

        .order-table tr:hover {
            background-color: #f9f9f9;
        }

    .btn-detail {
        background: #ff6f00;
        border: none;
        padding: 6px 12px;
        border-radius: 4px;
        color: white;
        font-size: 14px;
        cursor: pointer;
        text-decoration: none;
    }

        .btn-detail:hover {
            background: #e65c00;
        }

    .alert-box {
        padding: 10px;
        border-radius: 4px;
        margin-bottom: 20px;
    }

        .alert-box.error {
            background: #f8d7da;
            color: #721c24;
        }

    .product-image {
        width: 50px;
        height: 50px;
        object-fit: cover;
        margin: 2px;
    }

    .product-name {
        display: block; /* Mỗi tên sản phẩm trên một dòng */
        margin-bottom: 5px;
    }
    .button-group {
        display: flex;
        gap: 10px; /* Space between buttons */
        justify-content: center; /* Center buttons in the cell */
    }

    .btn-detail, .btn-cancel {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 4px;
        color: white;
        text-decoration: none;
        font-size: 14px;
        cursor: pointer;
    }

    .btn-detail {
        background: #ff6f00;
    }

        .btn-detail:hover {
            background: #e65c00;
        }

    .btn-cancel {
        background: #dc3545;
    }

        .btn-cancel:hover {
            background: #c82333;
        }
</style>

<div class="orders-container">
    <ul class="nav nav-tabs" id="profileTab">
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Index", "Thongtin")">Thông Tin Cá Nhân</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="@Url.Action("DonHang", "Thongtin")">Đơn Hàng Đã Mua</a>
        </li>
    </ul>

    <h4 style="text-align: center; margin: 30px 0;">Danh Sách Đơn Hàng</h4>

    @if (Model == null || !Model.Any())
    {
        <div class="alert-box error">
            Bạn chưa có đơn hàng nào.
        </div>
    }
    else
    {
        <table class="order-table">
            <thead>
                <tr>
                    <th>Mã Đơn Hàng</th>
                    <th>Hình Ảnh</th>
                    <th>Tên Sản Phẩm</th>
                    <th>Ngày Đặt</th>
                    <th>Tổng Tiền</th>
                    <th>Trạng Thái</th>
                    <th>Chi Tiết</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MaDonHang</td>
                        <td>
                            @if (item.ChiTietDonHangs != null && item.ChiTietDonHangs.Any())
                            {
                                foreach (var ct in item.ChiTietDonHangs)
                                {
                                    if (ct.Sach?.Hinh != null)
                                    {
                                        <img src="/img/sach/@ct.Sach.Hinh" alt="@(ct.Sach.TenSach ?? "Không có tên")" class="product-image" />
                                        <br />
                                    }
                                }
                            }
                            else
                            {
                                @: Không có hình ảnh
                            }
                        </td>
                        <td>
                            @if (item.ChiTietDonHangs != null && item.ChiTietDonHangs.Any())
                            {
                                foreach (var ct in item.ChiTietDonHangs)
                                {
                                    <span class="product-name">@(ct.Sach?.TenSach ?? "Không có tên")</span>
                                }
                            }
                            else
                            {
                                @: Không có sản phẩm
                            }
                        </td>
                        <td>@(item.NgayDat?.ToString("dd/MM/yyyy") ?? "Chưa có ngày")</td>
                        <td>@String.Format("{0:N0} đ", ViewBag.TongTienDict[item.MaDonHang])</td>
                        <td>@item.TrangThai</td>
                        <td>
                            <div class="button-group">
                                <a class="btn-detail" href="@Url.Action("ChiTietDonHang", "Thongtin", new { id = item.MaDonHang })">Xem</a>
                                @if (item.TrangThai == "Chờ xác nhận")
                                {
                                    <a class="btn-detail btn-cancel" href="@Url.Action("HuyDonHang", "Thongtin", new { id = item.MaDonHang })" onclick="return confirm('Bạn có chắc muốn hủy đơn hàng này?');">Hủy</a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>