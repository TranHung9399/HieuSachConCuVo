@model banSach.Models.Loai

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <br />
    <h3>Bạn có chắc chắn muốn xóa loại sách này không?</h3>
    <br />
    <p><span class="fw-bold">Tên loại sách</span><br /> <span>@Html.DisplayFor(model => model.TenLoai)</span></p>

    @using (Html.BeginForm("Delete", "Loais", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="m-auto">
            <input class="btn btn-primary btn-lg" type="submit" value="Xoá" />
            @Html.ActionLink("Quay Về", "Index", null, new { @class = "btn btn-primary btn-lg" })
        </div>
    }
</div>