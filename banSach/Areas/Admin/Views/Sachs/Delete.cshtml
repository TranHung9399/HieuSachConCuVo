@model banSach.Models.Sach
@using System.Globalization
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <br />
    <h3>Bạn có chắc chắn muốn xoá nhân viên này không?</h3>
    <br />
    <p><span class="fw-bold">Tên sách</span><br /> <span>@Html.DisplayFor(model => model.TenSach)</span></p>
    <p>
        <span class="fw-bold">Hình</span><br />
        <span>
            @if (!string.IsNullOrEmpty(Model.Hinh))
            {
                <img src="@Url.Content("~/img/sach/" + Model.Hinh)" alt="Logo" style="max-width: 100px; max-height: 100px;" />
            }
            else
            {
                <span>Không có hình ảnh</span>
            }
        </span>
    </p>
    <p><span class="fw-bold">Giá bán</span><br /> <span> @String.Format(CultureInfo.GetCultureInfo("vi-VN"), "{0:c0}", Model.GiaBan)</span></p>

    @using (Html.BeginForm("Delete", "Sachs", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="m-auto">
            <input class="btn btn-primary btn-lg" type="submit" value="Xoá" />
            @Html.ActionLink("Quay Về", "Index", null, new { @class = "btn btn-primary btn-lg" })
        </div>
    }
</div>