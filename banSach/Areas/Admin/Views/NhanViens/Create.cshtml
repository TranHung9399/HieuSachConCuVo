@model banSach.Models.NhanVien

@{
    ViewBag.Title = "Thêm mới nhân viên";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-12 col-lg-9 col-xl-7">
                    <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                        <div class="card-body p-4 p-md-5">
                            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Thêm mới nhân viên</h3>

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <!-- Họ tên -->
                            <div class="mb-4">
                                <label class="form-label fw-bold">Tên nhân viên</label>
                                @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                            </div>

                            <!-- Số điện thoại -->
                            <div class="mb-4">
                                <label class="form-label fw-bold">Số điện thoại</label>
                                @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                            </div>

                            <!-- Email -->
                            <div class="mb-4">
                                <label class="form-label fw-bold">Email</label>
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>

                            <!-- Tên tài khoản -->
                            <div class="mb-4">
                                <label class="form-label fw-bold">Tên tài khoản</label>
                                @Html.EditorFor(model => model.TenTK, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                @Html.ValidationMessageFor(model => model.TenTK, "", new { @class = "text-danger" })
                            </div>

                            <!-- Mật khẩu -->
                            <div class="mb-4">
                                <label class="form-label fw-bold">Mật khẩu</label>
                                @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control form-control-lg" })
                                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                            </div>

                            <!-- Chức vụ -->
                            <div class="mb-4">
                                <label class="form-label fw-bold">Chức vụ</label>
                                @Html.DropDownListFor(model => model.MaCV, (SelectList)ViewBag.MaCV, "-- Chọn chức vụ --", new { @class = "form-control form-control-lg" })
                                @Html.ValidationMessageFor(model => model.MaCV, "", new { @class = "text-danger" })
                            </div>

                            <!-- Nút -->
                            <div class="text-center">
                                <input type="submit" value="Thêm" class="btn btn-primary btn-lg me-2" />
                                @Html.ActionLink("Quay về", "Index", null, new { @class = "btn btn-secondary btn-lg" })
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
