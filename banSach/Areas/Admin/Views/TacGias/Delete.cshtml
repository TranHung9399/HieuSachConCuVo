@model banSach.Models.TacGia

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <br />
    <h3>Bạn có chắc chắn muốn xoá tác giả này không?</h3>
    <br />
    <p><span class="fw-bold">Tên tác giả</span><br /> <span>@Html.DisplayFor(model => model.TenTG)</span></p>
    <p><span class="fw-bold">Địa chỉ</span><br /> <span>@Html.DisplayFor(model => model.DiaChi)</span></p>
    <p><span class="fw-bold">Tiểu sử</span><br /> <span>@Html.DisplayFor(model => model.TieuSu)</span></p>
    <p><span class="fw-bold">Điện thoại</span><br /> <span>@Html.DisplayFor(model => model.DienThoai)</span></p>

    @using (Html.BeginForm("Delete", "TacGias", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="m-auto">
            <input class="btn btn-primary btn-lg" type="submit" value="Xoá" />
            @Html.ActionLink("Quay Về", "Index", null, new { @class = "btn btn-primary btn-lg" })
        </div>
    }
</div>
