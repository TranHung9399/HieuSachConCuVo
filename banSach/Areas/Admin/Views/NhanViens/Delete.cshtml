@model banSach.Models.NhanVien

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <br />
    <h3>Bạn có chắc chắn muốn xoá nhân viên này không?</h3>
    <br />
    <p><span class="fw-bold">Tên nhân viên</span><br /> <span>@Html.DisplayFor(model => model.HoTen)</span></p>
    <p><span class="fw-bold">Số điện thoại</span><br /> <span>@Html.DisplayFor(model => model.SoDienThoai)</span></p>
    <p><span class="fw-bold">Email</span><br /> <span>@Html.DisplayFor(model => model.Email)</span></p>
    <p><span class="fw-bold">Chức vụ</span><br /> <span>@Html.DisplayFor(model => model.ChucVu.TenCV)</span></p>

    @using (Html.BeginForm("Delete", "NhanViens", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="m-auto">
            <input class="btn btn-primary btn-lg" type="submit" value="Xoá" />
            @Html.ActionLink("Quay Về", "Index", null, new { @class = "btn btn-primary btn-lg" })
        </div>
    }
</div>